<form action="/composition" method="post" class="note-input-form">
  <div>
    <label for="title">Title</label>
    <input type="text" name="title" class="note-title" required>
  </div>
  <div>
    <label for="body">Body</label>
    <textarea type="text" name="body" class="note-body" required></textarea>
  </div>
  <div>
    <input type="submit" value="save">
  </div>
</form>
